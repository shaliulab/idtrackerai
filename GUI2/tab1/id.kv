<tabs>:
    id: tabs
    size_hint: 1,1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        id: tab1
        text:"Welcome"
        SelectFile:
            id: select_file
            BoxLayout:
                orientation: "vertical"
                Image:
                    id: logo
                    source: "../utils/loadingIdDeep.png"
                    size: root.size
                Label:
                    id: welcome
                    text: "Welcome to idTrackerDeep.\nSelect a video, or a video segment"
                    text_size: self.size
                    size: self.texture_size
                    halign: "center"
                    valign: "middle"
                Button:
                    id:switch_button
                    text: "Go to preprocessing"
                    on_press: root.assignPath(select_file.update)
                    on_release: tabs.switch(tab2)
                    disabled: select_file.open(filechooser.path, filechooser.selection)
                    # on_press: select_file.updateLabel()
            FileChooserListView:
                id: filechooser
                # on_selection: select_file.selected(filechooser.selection)

    TabbedPanelItem:
        id:tab2
        text:"Preprocessing"

        Button:
            id: show_video_path
            text: root.pathToVideo
