# File Name: idTrackerApp.py
# kivy: 1.9.1

<tabs>:
    do_default_tab: False

    TabbedPanelItem:
        id: "mask"
        text: "Mask"

        FloatLayout:

            BoxLayout:
                size_hint: .1,.1
                pos_hint: {"x":.6, "y":.85}
                Label:
                    text_size: root.width/2, None
                    text: "Scroll and select a mask to be applied to the video"

            videoWin:

            IOButton:
                id: "bkgsubButton"
                text: "Save mask"
                size_hint: .1,.1
                on_press: self.on_press
                on_release: self.on_release
                pos_hint: {"x":0 , "top":0.95}

    TabbedPanelItem:
        id: "preprocessing"
        text: "Preprocessing"

        FloatLayout:
            IOButton:
                id:"bkgsubButton"
                text: "Bkg\nSubtraction"
                size_hint: .1,.1
                on_press: self.on_press
                on_release: self.on_release
                pos_hint: {"x":0 , "top":0.95}

            IOButton:
                id:"segmentVideo"
                text:"Segment video"
                size_hint: .1,.1
                on_press: self.on_press
                on_release: self.on_release
                pos_hint: {"x":0 , "top":0.45}



            Image:
                id:"frame"
                source:'../utils/loadingIdDeep.png'

    TabbedPanelItem:
        id: "tracking"
        text: "Tracking"

    TabbedPanelItem:
        id: "player"
        text: "Player"
